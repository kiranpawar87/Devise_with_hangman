%head
  =javascript_include_tag "application"


.header

  .container
    .row
      .col-sm-2
        Welcome
        =current_user.email
        %br
      .col-sm-8
        %h1 Hangman
      .col-sm-2
        =link_to 'Log out', destroy_user_session_path
    .row
      .col-sm-2
        -User.all.each do |i|
          -if i[:email]==current_user.email
            .wins
              Wins : #{i[:wins]}
            .lose
              Lose : #{i[:lose]}

      .col-sm-1
      .col-sm-1
      .col-sm-2

.admin


  .aside
    %h2 Categories
    -Category.all.each do |i|
      %h4
      =link_to i[:cname],:action=>"category",:controller=> "game/hangman",:id=>i[:id],:remote=>true
    .target

  .display
    .game
      .attempt1
        %h4 You have Chance :
        .attempt
      %br/
      .cat
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        %p &nbsp;&nbsp;&nbsp;
        =$selected_cat
      %br/
      =form_tag :remote=>true,:controller=>"game/hangman",:action=>"start_game" do
        =label_tag 'Enter Text'
        =text_field_tag 'input',nil,{:class=>"input",:autofocus=>true}
        =button_tag 'Submit'
      %br
    %hr
    %br

    .wordFormed
      %br/
    .print
      %h6
      %p
      %h1
      = link_to "New Game", {:controller => "game/hangman", :action => "new_game",:remote=>true}

  .rside
    .img
      %img(src="/assets/hangman0.gif" )




